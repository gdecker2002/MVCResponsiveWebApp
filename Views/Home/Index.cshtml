@model ResponsiveModel
@{
    ViewBag.Title="Age Calculator";
}

<main>
    <h1>Age Calculator</h1>
    <form asp-action="Index" method="post" class="form-horizontal">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <label asp-for="userName" class="control-label" >First Name:</label>
            <input asp-for="userName" class="form-control col-sm-3"/>
        </div>
        <div class="row">
            <label asp-for="yearOfBirth" class="control-label" >Year of Birth:</label>
            <input asp-for="yearOfBirth" class="form-control col-sm-3"/>
        </div>

        <div class="row">
            <label class="control-label">Age on Dec 31st, 2021:</label>
            <input value="@ViewBag.FV.ToString("")" class="form-control col-sm-3" readonly >
        </div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </form>
</main>
